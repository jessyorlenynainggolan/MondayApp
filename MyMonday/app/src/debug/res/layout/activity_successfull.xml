<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Successfull"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#A1B684"
        android:padding="25dp">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:background="@drawable/gradient_bg1"
        android:orientation="horizontal"
        android:backgroundTint="#A1B684"
        android:layout_marginTop="50dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_marginLeft="-60sp"
            android:layout_marginTop="-30sp"
            android:layout_height="250dp"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:src="@drawable/leaf"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-50dp"
            android:layout_marginTop="150dp"
            android:text="THANK YOU"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-150sp"
            android:layout_marginTop="190dp"
            android:text="TRANSACTION SUCCESSFULL"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:background="@drawable/gradient_bg1"
        android:orientation="horizontal"
        android:backgroundTint="#A0522D"
        android:layout_marginTop="-30dp">
    </LinearLayout>
    <ImageView
        android:layout_width="190sp"
        android:layout_marginLeft="95sp"
        android:layout_marginTop="-180sp"
        android:layout_height="190dp"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:src="@drawable/ceklis"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_marginLeft="230sp"
        android:layout_marginTop="-30sp"
        android:layout_height="210dp"
        android:adjustViewBounds="true"
        android:cropToPadding="true"
        android:src="@drawable/coconut"/>



</LinearLayout>
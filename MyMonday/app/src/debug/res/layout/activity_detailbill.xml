1`1<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".detailbill"
    android:orientation="vertical"
    android:background="#A3EFEFEF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        android:background="#A1B684">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="-1dp"
            android:text="RESTAURANT DETAILS"
            android:textColor="#ffff"
            android:textSize="20dp"
            android:textStyle="bold"/>
    </LinearLayout>
    <!--swipe-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"/>

            <!--splash1-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="-90dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/gradient_bg"
                android:orientation="horizontal"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="2dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="McDonald's"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginLeft="20dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Rating"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="24dp"
                        android:textColor="#636363"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_starrate"
                        android:text="4.5 / 5.0"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="24dp"
                        android:textColor="#636363"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="Comment"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="24dp"
                        android:textColor="#636363"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="The application is very good, helping users in ordering food with a choice of various payment methods."
                        android:textSize="14dp"
                        android:layout_marginLeft="24dp"
                        android:textColor="#636363"/>
                </LinearLayout>
            </LinearLayout>

            <!--splash2-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_bg1"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="2dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="  History Order"
                        android:layout_marginTop="5dp"
                        android:textSize="18dp"
                        android:drawableLeft="@drawable/ic_resto"
                        android:textColor="#000000"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="2  Hamburger            Rp.50000"
                        android:layout_marginTop="10dp"
                        android:textColor="#000000"
                        android:layout_marginLeft="30sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="1  Spaghetti              Rp.160000"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="30dp"
                        android:textColor="#000000"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="1  Italian Pizza          Rp.195000"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="30dp"
                        android:textColor="#000000"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="2   Lemon Tea            Rp.20000"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="30dp"
                        android:textColor="#000000"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="1   Thailand Tea         Rp.25000"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="30dp"
                        android:textColor="#000000"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="2   Ice Coffe              Rp.25000"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="30dp"
                        android:textColor="#000000"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Total Purchases"
                        android:layout_marginTop="50dp"
                        android:layout_marginLeft="30dp"
                        android:textColor="#000000"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Rp.500000"
                        android:textSize="18sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="35dp"
                        android:textColor="#000000"/>
                    <Button
                        android:id="@+id/btnfinish"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:backgroundTint="#A0522D"
                        android:text="FINISH"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="100dp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="-70sp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"
                    android:src="@drawable/leaf"
                    android:layout_marginLeft="-10sp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
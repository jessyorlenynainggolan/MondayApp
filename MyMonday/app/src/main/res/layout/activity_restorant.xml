<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".restorant"
    android:orientation="vertical"
    android:background="#A3EFEFEF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#A1B684"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:id="@+id/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/ic_baseline_arrow_back_24"
            app:backgroundTint="#636363" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="-1dp"
            android:text="RESTAURANTS"
            android:textColor="#ffff"
            android:textSize="20dp"
            android:textStyle="bold"/>
    </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:background="@drawable/head"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"/>

                <!--splash1-->
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient_bg"
                    android:layout_marginTop="-130dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="155dp"
                            android:adjustViewBounds="true"
                            android:cropToPadding="true"
                            android:src="@drawable/mcdo" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="2dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="McDonald's"
                            android:layout_marginTop="5dp"
                            android:textSize="18dp"
                            android:textColor="#636363"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="Komp. Fanindo Sanctuary Garden, Harbourfront - Batam Centre"
                            android:drawableLeft="@drawable/ic_loc"
                            android:textColor="#636363"
                            android:textSize="12dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="20 Seats"
                            android:layout_marginTop="1dp"
                            android:drawableLeft="@drawable/ic_chair"
                            android:textColor="#636363"
                            android:textSize="12dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:text="4.5 / 5.0"
                            android:drawableLeft="@drawable/ic_star"
                            android:textColor="#636363"
                            android:textSize="12dp"
                            />

                        <Button
                            android:id="@+id/buttondetail"
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:backgroundTint="#A0522D"
                            android:text="Show Details"
                            android:layout_marginLeft="20dp"/>
                    </LinearLayout>
                </LinearLayout>

            <!--splash2-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_bg"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="155dp"
                        android:adjustViewBounds="true"
                        android:cropToPadding="true"
                        android:src="@drawable/sbuxs" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="2dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Starbucks"
                        android:layout_marginTop="5dp"
                        android:textSize="18dp"
                        android:textColor="#636363"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Komp. Fanindo Sanctuary Garden, Harbourfront - Batam Centre"
                        android:drawableLeft="@drawable/ic_loc"
                        android:textColor="#636363"
                        android:textSize="12dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="30 Seats"
                        android:layout_marginTop="1dp"
                        android:drawableLeft="@drawable/ic_chair"
                        android:textColor="#636363"
                        android:textSize="12dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="4.6 / 5.0"
                        android:drawableLeft="@drawable/ic_star"
                        android:textColor="#636363"
                        android:textSize="12dp"/>

                    <Button
                        android:id="@+id/buttondetail1"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:backgroundTint="#A0522D"
                        android:text="Show Details"
                        android:layout_marginLeft="20dp"/>
                </LinearLayout>
            </LinearLayout>

            <!--splash3-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_bg"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="155dp"
                        android:adjustViewBounds="true"
                        android:cropToPadding="true"
                        android:src="@drawable/kfc" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="2dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="KFC"
                        android:layout_marginTop="5dp"
                        android:textSize="18dp"
                        android:textColor="#636363"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Komp. Fanindo Sanctuary Garden, Harbourfront - Batam Centre"
                        android:drawableLeft="@drawable/ic_loc"
                        android:textColor="#636363"
                        android:textSize="12dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="30 Seats"
                        android:layout_marginTop="1dp"
                        android:drawableLeft="@drawable/ic_chair"
                        android:textColor="#636363"
                        android:textSize="12dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="4.6 / 5.0"
                        android:drawableLeft="@drawable/ic_star"
                        android:textColor="#636363"
                        android:textSize="12dp"/>

                    <Button
                        android:id="@+id/showdetail2"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:backgroundTint="#A0522D"
                        android:text="Show Details"
                        android:layout_marginLeft="20dp"/>
                </LinearLayout>
            </LinearLayout>
            <!--splash3-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_bg"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="155dp"
                        android:adjustViewBounds="true"
                        android:cropToPadding="true"
                        android:src="@drawable/jcoo" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="2dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="J.CO"
                        android:layout_marginTop="5dp"
                        android:textSize="18dp"
                        android:textColor="#636363"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Komp. Fanindo Sanctuary Garden, Harbourfront - Batam Centre"
                        android:drawableLeft="@drawable/ic_loc"
                        android:textColor="#636363"
                        android:textSize="12dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="25 Seats"
                        android:layout_marginTop="1dp"
                        android:drawableLeft="@drawable/ic_chair"
                        android:textColor="#636363"
                        android:textSize="12dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="4.5 / 5.0"
                        android:drawableLeft="@drawable/ic_star"
                        android:textColor="#636363"
                        android:textSize="12dp"/>

                    <Button
                        android:id="@+id/showdetail3"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:backgroundTint="#A0522D"
                        android:text="Show Details"
                        android:layout_marginLeft="20dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
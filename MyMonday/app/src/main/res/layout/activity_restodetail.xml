<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".restodetail"
    android:orientation="vertical"
    android:background="#A3EFEFEF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal"
        android:background="#A1B684">

        <Button
            android:id="@+id/back1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_baseline_arrow_back_24"
            app:backgroundTint="#636363"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="-1dp"
            android:text="RESTAURANT DETAILS"
            android:textColor="#ffff"
            android:textSize="20dp"
            android:textStyle="bold"/>
    </LinearLayout>
        <!--swipe-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"/>

            <!--splash1-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="-90dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/gradient_bg"
                android:orientation="horizontal"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="130dp"
                        android:layout_height="170dp"
                        android:adjustViewBounds="true"
                        android:cropToPadding="true"
                        android:src="@drawable/mcdo"
                        android:background="@drawable/card"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="2dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="40dp"
                        android:text="McDonald's"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginLeft="20dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="Rating"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="24dp"
                        android:textColor="#636363"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_starrate"
                        android:text="4.5 / 5.0"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="24dp"
                        android:textColor="#636363"/>
                </LinearLayout>
            </LinearLayout>

            <!--splash2-->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient_bg"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="2dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Fast Food Restaurant"
                        android:layout_marginTop="5dp"
                        android:textSize="18dp"
                        android:drawableLeft="@drawable/ic_resto"
                        android:textColor="#636363"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Address"
                        android:layout_marginTop="10dp"
                        android:drawableLeft="@drawable/ic_loc"
                        android:textColor="#636363"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Komp. Fanindo Sanctuary Garden, Harbourfront -Batam Centre Jl. Ahmad Yani No.1, Tlk. Tering, Kec. Batam Kota, Kota Batam, Kepulauan Riau 29461"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="26dp"
                        android:textColor="#636363"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Operational"
                        android:layout_marginTop="10dp"
                        android:drawableLeft="@drawable/ic_chair"
                        android:textColor="#636363"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="00 : 00 - 23-59  Monday - Sunday"
                       android:layout_marginLeft="26dp"
                        android:layout_marginTop="5dp"
                        android:textColor="#636363"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text=" Phone"
                        android:layout_marginTop="10dp"
                        android:drawableLeft="@drawable/ic_phone"
                        android:textColor="#636363"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="0811-8773-668"
                        android:layout_marginLeft="26dp"
                        android:layout_marginTop="5dp"
                        android:textColor="#636363"/>

                    <Button
                        android:id="@+id/buttonmap"
                        android:layout_width="120dp"
                        android:layout_height="match_parent"
                        android:backgroundTint="#A0522D"
                        android:text="Maps"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:drawableLeft="@drawable/ic_location"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>